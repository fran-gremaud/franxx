      box-shadow: 10px 10px 0 var(--shadow);
      padding: 0 6px;
      gap: 8px;
    }

    .postit-poem .postit-title {
      font-family: PostBinaire, sans-serif;
      font-size: 12px;
      color: #fff;
      opacity: 0.95;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .postit-poem .postit-actions {
      display: flex;
      gap: 6px;
      align-items: center;
      flex: 0 0 auto;
    }

    .postit-poem .close-poem {
      background: #fff;
      border: 2px solid var(--accent);
      color: var(--accent);
      width: 22px;
      height: 22px;
      line-height: 18px;
      font-size: 16px;
      cursor: pointer;
      padding: 0;
    }

    .postit-poem .postit-content {
      background: #ffffff;
      border: 4px solid var(--accent);
      box-shadow: 10px 10px 0 var(--shadow);
      padding: 18px;

      font-family: "AdelpheFructidorBold", serif;
      font-size: 15px;
      line-height: 1.45;

      color: var(--accent);
      text-align: left;

      font-feature-settings: "liga" 1, "dlig" 1;
      white-space: pre-wrap;
    }

    /* Fenêtre “règle du jeu” */
    #rules-modal {
      position: absolute;
      left: 32px;
      top: 32px;
      width: 380px;
      z-index: 999;
      --accent: #EFFF0F;
      --shadow: #EFFF0F;
      cursor: default;
    }

    #rules-modal .postit-bar {
      background: var(--accent);
      border-color: var(--accent);
      box-shadow: 10px 10px 0 var(--shadow);
    }

    #rules-modal .rules-content {
      background: #ffffff;
      border: 4px solid var(--accent);
      box-shadow: 10px 10px 0 var(--shadow);
      padding: 16px;

      font-family: PostBinaire, sans-serif;
      font-size: 14px;
      line-height: 1.5;
      color: #ff2fa3;
    }

    #rules-modal .rules-content strong {
      font-weight: 700;
    }

    /* Dock pour ré-ouvrir les post-its fermés */
    #postit-dock {
      position: absolute;
      left: 24px;
      right: 24px;
      bottom: 24px;
      z-index: 800;
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      align-items: center;
      justify-content: flex-start;
      pointer-events: none;
    }

    #postit-dock .dock-item {
      pointer-events: auto;
      background: #fff;
      border: 3px solid #000;
      box-shadow: 6px 6px 0 #000;
      padding: 6px 10px;
      font-family: PostBinaire, sans-serif;
      font-size: 12px;
      color: #ff2fa3;
      cursor: pointer;
