      font-style: italic;
      color: #ff2fa3;
      opacity: 0.85;
    }

    /* Post-it (poèmes) — basé sur tes post-its existants */
    .postit-poem {
      position: absolute;
      width: 360px;
      z-index: 10;
      cursor: grab;
      left: 0;
      top: 0;
      --accent: #00a8ff;
      --shadow: #00a8ff;
    }

    .postit-poem.dragging {
      cursor: grabbing;
      user-select: none;
    }

    .postit-poem .postit-bar {
      background: var(--accent);
      height: 28px;
      display: flex;
      align-items: center;
