  <!-- Chargement du footer -->
  <script>
    fetch("footer.html")
      .then(r => r.text())
      .then(html => {
        document.getElementById("footer-placeholder").innerHTML = html;
      });
  </script>

  <!-- RECUEIL — LOGIQUE POST-ITS -->
  <script>
  (function () {
    const page = document.querySelector(".page");
    const dock = document.getElementById("postit-dock");

    // ✅ Remplace chaque "..." par tes poèmes
    const poems = [
      { id: "p01", title: "texte 01", body: "[colle ici le texte 01]" },
      { id: "p02", title: "texte 02", body: "[colle ici le texte 02]" },
      { id: "p03", title: "texte 03", body: "[colle ici le texte 03]" },
      { id: "p04", title: "texte 04", body: "[colle ici le texte 04]" },
      { id: "p05", title: "texte 05", body: "[colle ici le texte 05]" },
      { id: "p06", title: "texte 06", body: "[colle ici le texte 06]" },
      { id: "p07", title: "texte 07", body: "[colle ici le texte 07]" },
      { id: "p08", title: "texte 08", body: "[colle ici le texte 08]" },
      { id: "p09", title: "texte 09", body: "[colle ici le texte 09]" },
      { id: "p10", title: "texte 10", body: "[colle ici le texte 10]" },
      { id: "p11", title: "texte 11", body: "[colle ici le texte 11]" },
      { id: "p12", title: "texte 12", body: "[colle ici le texte 12]" },
      { id: "p13", title: "texte 13", body: "[colle ici le texte 13]" },
      { id: "p14", title: "texte 14", body: "[colle ici le texte 14]" },
      { id: "p15", title: "texte 15", body: "[colle ici le texte 15]" }
    ];

    // Palette simple (accents) — tu peux en ajouter
    const accents = [
      { a: "#00a8ff", s: "#00a8ff" },
      { a: "#EFFF0F", s: "#EFFF0F" },
      { a: "#ff2fa3", s: "#ff2fa3" },
      { a: "#000000", s: "#000000" }
    ];

    let topZ = 50;

    function randomizeInPage(el, container) {
      const minVisible = 80;

      const maxX = container.clientWidth  - minVisible;
      const maxY = container.clientHeight - minVisible;

      const minX = -(el.offsetWidth  - minVisible);
      const minY = -(el.offsetHeight - minVisible);

      const x = minX + Math.random() * (maxX - minX);
      const y = minY + Math.random() * (maxY - minY);

      el.style.left = x + "px";
      el.style.top  = y + "px";
    }

    function bringToFront(el) {
      topZ += 1;
      el.style.zIndex = topZ;
    }

    function makeDraggable(el) {
      let dragging = false, startX = 0, startY = 0, startLeft = 0, startTop = 0;

      el.addEventListener("mousedown", startDrag);
      el.addEventListener("touchstart", startDrag, { passive: false });

      function startDrag(e) {
        // pas de drag si clic sur "×"
        if (e.target && e.target.classList && e.target.classList.contains("close-poem")) return;

        bringToFront(el);

        const evt = e.touches ? e.touches[0] : e;
        dragging = true;
        el.classList.add("dragging");
        startX = evt.clientX;
        startY = evt.clientY;
        startLeft = el.offsetLeft;
        startTop = el.offsetTop;

        document.addEventListener("mousemove", drag);
        document.addEventListener("mouseup", stopDrag);
        document.addEventListener("touchmove", drag, { passive: false });
        document.addEventListener("touchend", stopDrag);
      }

      function drag(e) {
        if (!dragging) return;
        e.preventDefault();
        const evt = e.touches ? e.touches[0] : e;
        el.style.left = startLeft + (evt.clientX - startX) + "px";
        el.style.top  = startTop  + (evt.clientY - startY) + "px";
      }

      function stopDrag() {
        dragging = false;
        el.classList.remove("dragging");
        document.removeEventListener("mousemove", drag);
        document.removeEventListener("mouseup", stopDrag);
        document.removeEventListener("touchmove", drag);
        document.removeEventListener("touchend", stopDrag);
      }
    }

    function createDockButton(noteEl, label) {
      const btn = document.createElement("button");
      btn.type = "button";
      btn.className = "dock-item";
      btn.textContent = "rouvrir — " + label;

      btn.addEventListener("click", () => {
        noteEl.style.display = "";
        bringToFront(noteEl);

        if (!window.matchMedia("(max-width: 700px)").matches) {
          randomizeInPage(noteEl, page);
        }

        btn.remove();
      });

      dock.appendChild(btn);
    }

    function escapeHtml(str) {
      return String(str)
        .replaceAll("&", "&amp;")
        .replaceAll("<", "&lt;")
        .replaceAll(">", "&gt;");
    }

    function buildPostit(poem, idx) {
      const wrap = document.createElement("div");
      wrap.className = "postit-poem post-binaire-texte";
      wrap.dataset.id = poem.id;

      const c = accents[idx % accents.length];
      wrap.style.setProperty("--accent", c.a);
      wrap.style.setProperty("--shadow", c.s);

      const widths = [340, 360, 380];
      wrap.style.width = widths[idx % widths.length] + "px";

      wrap.innerHTML = `
        <div class="postit-bar">
          <span class="postit-title">${poem.title}</span>
          <div class="postit-actions">
            <button class="close-poem" aria-label="fermer">×</button>
          </div>
        </div>
        <div class="postit-content">${escapeHtml(poem.body)}</div>
      `;

      // fermer
      wrap.querySelector(".close-poem").addEventListener("click", (e) => {
        e.stopPropagation();
        wrap.style.display = "none";
        createDockButton(wrap, poem.title);
      });

      // insertion + position aléatoire
      page.appendChild(wrap);
      bringToFront(wrap);

      requestAnimationFrame(() => {
        if (!window.matchMedia("(max-width: 700px)").matches) {
          randomizeInPage(wrap, page);
        }
      });

      // clic = devant
      wrap.addEventListener("click", () => bringToFront(wrap));

      makeDraggable(wrap);
      return wrap;
    }

    // build des 15
    poems.forEach((p, i) => buildPostit(p, i));

    // Fenêtre règle du jeu : fermer + bouton pour rouvrir
    const rules = document.getElementById("rules-modal");
    const closeRules = document.getElementById("close-rules");

    closeRules.addEventListener("click", () => {
      rules.style.display = "none";

      const btn = document.createElement("button");
      btn.type = "button";
      btn.className = "dock-item";
      btn.textContent = "rouvrir — règle du jeu";

      btn.addEventListener("click", () => {
        rules.style.display = "";
        bringToFront(rules);
        btn.remove();
      });

      dock.appendChild(btn);
    });

    rules.addEventListener("click", () => bringToFront(rules));
    bringToFront(rules);

  })();
  </script>

</body>
</html>

